<%= form_for @feed do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="checkbox">
    <%= f.check_box :active %>
    <%= f.label :active, "Active" %>
  </div>
  <div class="field">
    <%= f.label :context, "Context" %>
    <%= f.select :context, current_user.editable_feed_contexts.map { |c| [c.capitalize, c] } %>
  </div>
  <div id="submit-container">
    <div class="submit"><%= f.submit "Submit", disable_with: 'Submitting...' %></div>
  </div>
<% end %>

<div id="full-page-side-bar">
  <p class="instructions">The feed title is displayed above the feed and used as the url.</p>
  <p class="instructions"><strong><em><br />Need help?</em> <%= link_to "Contact the Web Team", emails_path %>.</strong></p>
</div>
